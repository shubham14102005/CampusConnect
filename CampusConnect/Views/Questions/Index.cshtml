@model IEnumerable<CampusConnect.Models.Question>
@{
    ViewData["Title"] = "All Questions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />

<!-- Search Bar -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-controller="Questions" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by keyword or tag..." value="@ViewData["CurrentSearch"]" />
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Improved Question List -->
@if (Model.Any())
{
    foreach (var question in Model)
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-controller="Questions" asp-action="Details" asp-route-id="@question.Id" class="text-decoration-none">
                        @question.Title
                    </a>
                </h5>
                <p class="card-subtitle text-muted">
                    Asked by @(question.ApplicationUser?.UserName ?? "Unknown") on @question.CreatedAt.ToShortDateString()
                </p>
                <!-- This part adds the tags to the list view -->
                <div class="mt-2">
                    @foreach (var tag in question.QuestionTags.Select(qt => qt.Tag))
                    {
                        <span class="badge bg-secondary me-1">#@tag.Name</span>
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <h4>No questions found.</h4>
        <p>Try a different search term or be the first to post a new question!</p>
    </div>
}

<div class="mt-4">
    <a asp-controller="Questions" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill"></i> Post a New Question
    </a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-house-door-fill"></i> Back to Home
    </a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}