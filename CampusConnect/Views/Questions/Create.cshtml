@model CampusConnect.ViewModels.CreateQuestionViewModel
@{
    ViewData["Title"] = "Ask a New Question";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="my-0 fw-normal">❓ Share your question with the community</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" placeholder="e.g., How do I set up a local database?" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="Tags" class="form-label fw-bold"></label>
                <input asp-for="Tags" class="form-control" placeholder="c#, asp.net-core, efcore" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send-fill"></i> Create Question
                </button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <h3 class="mb-3">All Questions</h3>
    <div class="list-group shadow-sm">
        @if (Model.AllQuestions != null && Model.AllQuestions.Any())
        {
            @foreach (var question in Model.AllQuestions)
            {
                <a asp-controller="Questions" asp-action="Details" asp-route-id="@question.Id" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@question.Title</h5>
                        <small>@question.CreatedAt.ToShortDateString()</small>
                    </div>
                    <small>Asked by @(question.ApplicationUser?.UserName ?? "Unknown")</small>
                </a>
            }
        }
        else
        {
            <div class="list-group-item">
                <p class="mb-0">No questions have been asked yet. Be the first!</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}