@model IEnumerable<CampusConnect.Models.Question>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CampusConnect</h1>
    <p>A place for students and alumni to share knowledge.</p>
</div>

<hr />

<h3>Recent Questions</h3>

@if (Model.Any())
{
    <div class="list-group">
        @foreach (var question in Model)
        {
            <a asp-controller="Questions" asp-action="Details" asp-route-id="@question.Id" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@question.Title</h5>
                    <small>@question.CreatedAt.ToShortDateString()</small>
                </div>
                <small>Asked by @question.ApplicationUser.FullName</small>
            </a>
        }
    </div>
}
else
{
    <p>No questions have been asked yet. Be the first!</p>
}