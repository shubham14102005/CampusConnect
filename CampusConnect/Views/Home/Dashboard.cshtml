@{
    ViewData["Title"] = "Dashboard";
}
@model CampusConnect.ViewModels.DashboardViewModel




<div class="row">
    <div class="col-md-9">
        <div class="feed-card">
            <h5>ðŸ“¢ Announcements</h5>
            <ul class="list-group list-group-flush">
                @foreach(var announcement in Model.Announcements)
                {
                    <li class="list-group-item">@announcement.Title</li>
                }
            </ul>
            <a href="/Announcements/Index" class="btn btn-sm btn-outline-primary mt-3">More</a>
        </div>

        <div class="feed-card">
            <h5><i class="bi bi-graph-up"></i> Trending Questions</h5>

            <form asp-controller="Home" asp-action="Index" method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="tag" class="form-control" placeholder="Search by tag..." value="@ViewData["CurrentTag"]" />
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>

            @foreach(var question in Model.TrendingQuestions)
            {
                <div class="feed-card question-card mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <img src="https://www.gravatar.com/avatar/@(System.Security.Cryptography.MD5.Create().ComputeHash(System.Text.Encoding.ASCII.GetBytes(question.ApplicationUser.Email.ToLower())).Select(b => b.ToString("x2")).Aggregate((a, b) => a + b))?d=identicon" alt="User Avatar" class="rounded-circle me-2" width="40" height="40">
                        <div>
                            <h6 class="mb-0">@question.ApplicationUser.FullName</h6>
                            <small class="text-muted">Asked on @question.CreatedAt.ToShortDateString()</small>
                        </div>
                    </div>
                    <h5 class="card-title"><a href="/Questions/Details/@question.Id" class="text-decoration-none text-dark">@question.Title</a></h5>
                    <div class="mt-3">
                        <a href="/Questions/Details/@question.Id" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-square"></i> Answer</a>
                    </div>
                    <div class="card-footer text-muted mt-3">
                        @question.Answers.Count Answers
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="col-md-3 right-panel">
        <h6 class="fw-bold">Suggested Users</h6>
        <ul class="list-unstyled">
            @foreach(var user in Model.SuggestedUsers)
            {
                <li class="mb-2">ðŸ‘¤ @user.FullName </li>
            }
        </ul>
        <hr>
        <h6 class="fw-bold">Upcoming Events</h6>
