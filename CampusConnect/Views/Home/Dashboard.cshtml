@{
    ViewData["Title"] = "Dashboard";
}
@model CampusConnect.ViewModels.DashboardViewModel


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: #f9f9f9;
        font-family: 'Segoe UI', sans-serif;
    }
    /* 🔹 Top Navbar */
    .navbar-custom {
        background: white;
        border-bottom: 1px solid #ddd;
    }
    .navbar-brand {
        font-weight: bold;
        color: #b92b27;
    }
    .nav-link {
        color: #555 !important;
        margin-right: 20px;
    }
    .nav-link:hover {
        color: #b92b27 !important;
    }

    /* 🔹 Sidebar */
    .sidebar {
        background: white;
        border-right: 1px solid #ddd;
        height: 100vh;
        padding: 20px 10px;
        position: sticky;
        top: 0;
    }
    .sidebar a {
        display: block;
        padding: 10px 15px;
        margin-bottom: 8px;
        color: #333;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
    }
    .sidebar a:hover {
        background: #f0f0f0;
        color: #b92b27;
    }

    /* 🔹 Feed Cards */
    .feed-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }
    .feed-card h5 {
        font-weight: bold;
    }
    .feed-card small {
        color: #666;
    }

    /* 🔹 Right panel */
    .right-panel {
        background: white;
        border-left: 1px solid #ddd;
        padding: 20px;
        position: sticky;
        top: 0;
        height: 100vh;
    }
</style>

<!-- 🔹 Top Navbar -->
<nav class="navbar navbar-expand-lg navbar-custom px-3">
    <a class="navbar-brand" href="#">CampusConnect</a>
    <div class="ms-auto d-flex">
        <form method="post" action="/Account/Logout">
            <button type="submit" class="btn btn-danger rounded-pill">Logout</button>
        </form>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <!-- 🔹 Sidebar -->
        <div class="col-md-2 sidebar">
            <a href="#">🏠 Home</a>
            <a href="/Questions/Index">📚 Questions</a>
            <a href="/Users/Index">👥 Users</a>
            <a href="/Leaderboard/Index">🏆 Leaderboard</a>
            <a href="/Announcements/Index">📰 Announcements</a>
            <a href="/Account/Profile">⚙️ Profile</a>
        </div>

        <!-- 🔹 Main Feed -->
        <div class="col-md-7 p-4">
            <div class="feed-card">
                <h5>Welcome, @User.Identity.Name 👋</h5>
                <p class="text-muted">This is your personalized dashboard. Start exploring!</p>
            </div>

            <div class="feed-card">
                <h5>📢 New Announcement</h5>
                <small>2 hours ago · Admin</small>
                <p>Campus fest will be held on 20th September. Don’t forget to register!</p>
            </div>

            <div class="feed-card">
                <h5><i class="bi bi-graph-up"></i> Trending Questions</h5>
                @foreach(var question in Model.TrendingQuestions)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@question.Title</h5>
                            <p class="card-text"><small class="text-muted">Asked by @question.ApplicationUser.FullName on @question.CreatedAt.ToShortDateString()</small></p>
                            <p class="card-text">@question.Content</p>
                            <a href="/Questions/Details/@question.Id" class="btn btn-primary">Answer</a>
                            <a href="#" class="btn btn-secondary">Follow</a>
                        </div>
                        <div class="card-footer text-muted">
                            @question.Answers.Count Answers
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- 🔹 Right Panel -->
        <div class="col-md-3 right-panel">
            <h6 class="fw-bold">Suggested Users</h6>
            <ul class="list-unstyled">
@foreach(var user in Model.SuggestedUsers)
{
    <li class="mb-2">👤 @user.FullName </li>
}
</ul>
            <hr>
            <h6 class="fw-bold">Upcoming Events</h6>
            <p>📅 Hackathon – 25th Sept</p>
            <p>📅 Workshop – 30th Sept</p>
        </div>
    </div>
</div>
