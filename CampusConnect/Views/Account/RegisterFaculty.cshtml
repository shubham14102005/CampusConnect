@model CampusConnect.ViewModels.RegisterFacultyViewModel

@{
    ViewData["Title"] = "Register Faculty";
    ViewData["ShowSidebar"] = false;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background: url('https://images.unsplash.com/photo-1503676260728-1c00da094a0b?auto=format&fit=crop&w=1470&q=80') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }
    
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.65);
        z-index: 1;
    }
    
    .auth-card {
        backdrop-filter: blur(15px);
        background: rgba(255, 255, 255, 0.12);
        border-radius: 20px;
        padding: 40px;
        color: white;
        width: 420px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
        transition: transform 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .auth-card:hover {
        transform: translateY(-5px);
    }
    .btn-gradient {
        background: linear-gradient(90deg, #28a745, #20c997);
        border: none;
        color: white;
        font-weight: bold;
        transition: 0.3s;
        padding: 12px;
    }
    .btn-gradient:hover {
        opacity: 0.85;
        color: white;
    }
    .form-control {
        background: rgba(255,255,255,0.1);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
    }
    .form-control::placeholder {
        color: rgba(255,255,255,0.7);
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #28a745;
        background: rgba(255,255,255,0.15);
        color: white;
    }
    .form-label {
        color: white;
        font-weight: 500;
    }
    .toggle-password {
        cursor: pointer;
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: white;
        z-index: 10;
    }
    .auth-links a {
        color: white;
        text-decoration: none;
        font-weight: 500;
    }
    .auth-links a:hover {
        color: #28a745;
        text-decoration: underline;
    }
</style>

<div class="overlay"></div>

<div class="d-flex justify-content-center align-items-center" style="height:100vh; position: relative; z-index: 2;">
    <div class="auth-card position-relative">
        <h2 class="text-center mb-4">Faculty Registration</h2>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <form asp-action="RegisterFaculty" class="position-relative">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control rounded-pill" placeholder="Enter your full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Faculty Email</label>
                <input asp-for="Email" class="form-control rounded-pill" placeholder="name@faculty.ddu.ac.in" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="mb-3 position-relative">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" id="password" placeholder="Enter password" />
                <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="FunctioningTitle" class="form-label">Job Title</label>
                <input asp-for="FunctioningTitle" class="form-control rounded-pill" placeholder="e.g., Assistant Professor, Dean" />
                <span asp-validation-for="FunctioningTitle" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="SecretKey" class="form-label">Faculty Registration Key</label>
                <input asp-for="SecretKey" type="password" class="form-control rounded-pill" placeholder="Enter faculty secret key" />
                <span asp-validation-for="SecretKey" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-gradient w-100 rounded-pill">Register as Faculty</button>
        </form>
        
        <div class="text-center mt-4 auth-links">
            <span>Already have an account? </span>
            <a href="/Account/Login">Login</a>
            <br>
            <span class="mt-2 d-block">Student? </span>
            <a href="/Account/Register">Register as Student</a>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const pass = document.getElementById('password');
        pass.type = pass.type === 'password' ? 'text' : 'password';
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
