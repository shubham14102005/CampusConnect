@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background: url('https://images.unsplash.com/photo-1521790362130-1e5a2c2f5d42?auto=format&fit=crop&w=1470&q=80') no-repeat center center fixed;
        background-size: cover;
        height: 100vh;
    }
    .overlay {
        position: absolute;
        top:0; left:0; right:0; bottom:0;
        background: rgba(0,0,0,0.6);
    }
    .register-card {
        backdrop-filter: blur(10px);
        background: rgba(255,255,255,0.15);
        border-radius: 20px;
        padding: 40px;
        color: white;
        width: 400px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.5);
        transition: transform 0.3s ease;
    }
    .register-card:hover {
        transform: translateY(-5px);
    }
    .btn-gradient {
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
        border: none;
        color: white;
        font-weight: bold;
        transition: 0.3s;
    }
    .btn-gradient:hover {
        opacity: 0.85;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #ff416c;
    }
    .toggle-password {
        cursor: pointer;
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: white;
    }
</style>

<div class="overlay"></div>

<div class="d-flex justify-content-center align-items-center" style="height:100vh; position: relative; z-index:1;">
    <div class="register-card position-relative">
        <h2 class="text-center mb-4">Register</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" action="/Account/Register" class="position-relative">
            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" class="form-control rounded-pill" id="fullName" name="fullName" placeholder="Enter your full name">

            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control rounded-pill" id="email" name="email" placeholder="Enter your email">
            </div>
            <div class="mb-3 position-relative">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control rounded-pill" id="password" name="password" placeholder="Enter password">
                <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
            </div>
            <button type="submit" class="btn btn-gradient w-100 rounded-pill">Register</button>
        </form>
        <div class="text-center mt-3">
            <span>Already have an account? </span>
            <a href="/Account/Login" class="text-white fw-bold text-decoration-underline">Login</a>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        const pass = document.getElementById('password');
        pass.type = pass.type === 'password' ? 'text' : 'password';
    }
</script>
