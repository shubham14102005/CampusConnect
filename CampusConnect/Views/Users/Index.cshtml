@model IEnumerable<CampusConnect.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>Users</h1>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search for users...">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        @string.Join(", ", item.Roles)
                    </td>
                    <td>
                        <a asp-controller="Users" asp-action="UserProfile" asp-route-id="@item.User.Id" class="btn btn-sm btn-info">View Profile</a>
                        @if (User.IsInRole("Faculty") && (item.Roles.Contains("Student") || !item.Roles.Any()))
                        {
                            <form asp-controller="Users" asp-action="DeleteUser" method="post" asp-route-userId="@item.User.Id" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Are you sure you want to anonymize this user account? This action cannot be undone.');">Anonymize User</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>