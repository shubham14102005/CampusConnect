@model CampusConnect.Models.Answer
@{
    ViewData["Title"] = "Delete Answer";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Are you sure you want to delete this answer?</h3>
<hr />
<div class="card bg-light">
    <div class="card-body">
        <p class="card-text">@Model.Content</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Yes, Delete
    </button>
    <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.QuestionId" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancel
    </a>
</form>