@model CampusConnect.Models.Answer
@{
    ViewData["Title"] = "Edit Answer";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="my-0 fw-normal">✏️ Edit Your Answer</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="QuestionId" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <input type="hidden" asp-for="CreatedAt" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Content" class="form-label fw-bold"></label>
                <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill"></i> Save Changes
                </button>
                <a asp-controller="Questions" asp-action="Details" asp-route-id="@Model.QuestionId" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>